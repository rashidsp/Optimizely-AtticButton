<div id='checkoutContent'>
    <div class="card-header text-center">
        <strong>Variation:</strong> {{variationKey}}
    </div>
    <div class="row {{#ifCond variationNum "===" 2 }}justify-content-center{{/ifCond}}" style="padding-top:20px;">
        <div class="col-lg-6 pt-4 shipping {{#ifCond variationNum "===" 2 }}col-lg-7{{/ifCond}}">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    SHIPPING INFO
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">First Name</label>
                                <input class="form-control" id="inputFirstName" placeholder="First Name" type="text" value="{{currentUser.firstName}}">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Last Name</label>
                                <input class="form-control" id="inputLastName" value="{{currentUser.lastName}}" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputAddress">Address</label>
                            <input class="form-control" id="inputAddress1" placeholder="1234 Main St" readonly="" type="text">
                        </div>
                        <div class="form-group">
                            <label for="inputAddress2">Address 2</label>
                            <input class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor" readonly="" type="text">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputCity">City</label>
                                <input class="form-control" id="inputCity" readonly="" type="text" value="Trenton">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputState">State</label>
                                <select class="form-control" disabled="" id="inputState">
                                    <option selected="New Jersey">New Jersey</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <label for="inputZip">Zip</label>
                                <input class="form-control" id="inputZip" readonly="" type="text" value="08608">
                            </div>
                            {{#ifCond variationNum '===' 2}}
                            <div class="form-group row" id="nextButton">
                                <div class="col-md-12 text-xs-left">
                                    <button class="btn btn-info btn-block" type="button" id="next_btn" onclick="eventHandler.showCreditCardSection()">
                                        <span id="next-button-amount">Next</span>
                                    </button>
                                </div>
                            </div>
                            {{/ifCond}}
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-6 credit-card pt-4 {{#ifCond variationNum "===" 2}}col-lg-7{{/ifCond}}" id="CreditCardPartial">
        </div>
    </div>
</div>
