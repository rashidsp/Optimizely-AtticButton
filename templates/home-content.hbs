<div id='homeContent'>
    {{#if tabData.variationKey}}
    <div class="card-header text-center">
        <strong>Variation:</strong> {{tabData.variationKey}}
    </div>
    {{/if}}
    <div class="row grid-group">
        {{#if products}} {{#each products}}
        <div class="item col-xs-3 col-lg-3" style="margin-bottom:45px;">
            <div class="thumbnail">
                <img class="img-fluid group list-group-image" style="width: 100%;height: 240px;" src={{this.imageUrl}} alt="Item 2">
                <div class="caption">
                    <h5 class="group inner list-group-item-heading">
                             {{this.name}}
                        </h5>
                    <p class="group inner list-group-item-text"></p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Color:</strong> {{this.color}}</li>
                        <li class="list-group-item"><strong>Category:</strong> {{this.category}}</li>
                    </ul>
                    <p></p>
                    <dl class="row">
                        <dt class="col-sm-3">
                            {{#ifCond ../tabData.discountPercentage '>' 0 }}
                            <del class="text-danger pr-2">${{amountFixed this.price}}</del>
                            {{else}} ${{amountFixed this.price}} {{/ifCond}}
                        </dt>
                        <dd class="col-sm-9">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    {{#ifCond ../tabData.discountPercentage '>' 0 }} ${{amountFixed (math this.price '-'(math ../tabData.discount "*" this.price))}} {{/ifCond}}
                                </dt>
                                <dd class="col-sm-8">
                                    <button class="btn btn-info" onclick="eventHandler.addToCart({{this.id}}, 1);">Buy Now</button>
                                </dd>
                            </dl>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        {{/each}} {{/if}}
    </div>
</div>
